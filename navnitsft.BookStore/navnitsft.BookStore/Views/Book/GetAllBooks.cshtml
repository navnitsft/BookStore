@using navnitsft.BookStore.Models;
@model IEnumerable<BookModel>

@{
    ViewData["Title"] = "GetAllBooks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h4 class="h4">Top available books</h4>
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm ">
                    <img src="~/images/thumbnail.png" class="figure-img" height="225" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@book.Title</h5>
                        <p class="card-text">This section will be used to display the description of book</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="#" class="btn btn-sm btn-outline-secondary">view details</a>
                            </div>
                            <small>@book.Author</small>
                        </div>
                    </div>
                </div>
            </div>

        }
        
        
    </div>
</div>

