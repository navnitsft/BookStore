@using navnitsft.BookStore.Models;
@model IEnumerable<BookModel>

<div class="container">
    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="row g-0">
                        <div class="col-sm-4">
                            <div id="cei" class="carousel slide" data-bs-ride="carousel">
                                <div class="carousel-indicators">
                                    <button type="button" data-bs-target="#cei" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                                    <button type="button" data-bs-target="#cei" data-bs-slide-to="1" aria-label="Slide 2"></button>
                                    <button type="button" data-bs-target="#cei" data-bs-slide-to="2" aria-label="Slide 3"></button>
                                </div>
                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <img src="~/images/book1.jpg" class="d-block w-100" alt="book1" />
                                    </div>
                                    <div class="carousel-item">
                                        <img src="~/images/book2.jpg" class="d-block w-100" alt="book2" />
                                    </div>
                                    <div class="carousel-item">
                                        <img src="~/images/book3.jpg" class="d-block w-100" alt="book3" />
                                    </div>
                                </div>
                                <button class="carousel-control-prev" type="button" data-bs-target="#cei" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Previous</span>
                                </button>
                                <button class="carousel-control-next" type="button" data-bs-target="#cei" data-bs-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Next</span>
                                </button>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="card-body">
                                <h5 class="card-title mb-2">@item.Title</h5>
                                <p class="card-text">@item.Description</p>
                                <p class="card-text"><small class="text-muted"><b>Category</b>: @item.Category <br /> <b>Language</b>: @item.Language <br /> <b>Page Count</b>: @item.PageCount <br /> <b>Author's name</b>: <i>@item.Author </i></small></p>

                                <a href="#" class="btn btn-outline-primary btn-sm stretched-link">View Profile</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<section class="pt-4 pb-2 bg-light">
    <div class="container">
        <h4 class="h4">Top available books</h4>      
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm ">
                        <img src="~/images/thumbnail.png" class="figure-img" height="225" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="/Book/GetBook/@item.Id" class="btn btn-sm btn-outline-secondary">view details</a>
                                </div>
                                <small>@item.Author</small>
                            </div>
                        </div>
                    </div>
                </div>
            }            
        </div>
    </div>
</section>
